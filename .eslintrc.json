{
  "extends": ["next/core-web-vitals", "prettier"],
  "rules": {
    // Error rules
    "no-duplicate-imports": "error",
    "no-var": "error",
    "prefer-const": "error",
    "no-unreachable": "error",
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "sibling",
          "parent",
          "index"
        ],
        "newlines-between": "always"
      }
    ],

    // Warn rules
    "no-console": "warn",
    "no-debugger": "warn"
  }
}
